<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的邮箱地址"
        android:visibility="gone"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="邮箱仅用于登录或找回密码使用"
        android:textSize="13sp"
        android:textColor="@color/secondary_text"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:hint="填写邮箱"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="手机号"
            android:textSize="20sp" />

        <Button
            android:id="@+id/get_imgcode"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/et_phone"
            android:layout_alignBottom="@+id/et_phone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/sky_blue"
            android:focusable="true"
            android:text="验证"
            android:textColor="#ffffff"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:hint="验证码"
            />
        <Button
            android:id="@+id/get_code"
            android:focusable="true"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:background="@color/sky_blue"
            android:text="获取验证码"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30sp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/pwd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:hint="密码"

            />
        <ImageView
            android:id="@+id/pwd_look"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/eye"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/pwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:hint="确认密码"

            />
        <ImageView
            android:id="@+id/pwd_look2"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/eye"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_nike_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:hint="填写昵称"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:focusable="false"
        android:hint="选择生日"

        />
        <ImageView
            android:id="@+id/choose_date"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>
    <RadioGroup
        android:id="@+id/rg_sexes"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"

        >

        <RadioButton
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="男" />

        <RadioButton
            android:id="@+id/woman"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="女" />
    </RadioGroup>

    <View
        android:layout_height="2px"
        android:visibility="visible"
        android:layout_marginTop="2dp"
        android:background="@color/divider"
        android:layout_width="match_parent">

    </View>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:text="注册成功后，性别不可以更改"
        android:textColor="@color/secondary_text"
        android:textSize="13sp" />

    <Button
        android:id="@+id/register"
        android:layout_gravity="center_horizontal"

        android:layout_width="360dp"
        android:layout_height="45dp"
        android:background="@drawable/bg_register"
        android:text="下一步"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:textColor="#ffffff" />





</LinearLayout>